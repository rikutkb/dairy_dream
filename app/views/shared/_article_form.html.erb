<div class="col-md-6 col-md-offset-3">
   <%= form_with model: @article do |f| %>
        <div class="field">
            <div class="form-group">
                <%= f.label :場所タグ ,class:'form-control' %>
                <select class="js-tag_place" multiple:true style="width: 250px;">
                </select>
            </div>
            <div class="form-group">
            <%= f.label :人物タグ ,class:'form-control' %>
            <select class="js-tag_person" id="person" multiple:true style="width: 250px;">
            </select>
            </div>


            <div class="form-group">
                <%= f.label :内容 ,class:'form-control' %>
                <%= f.text_area :content ,size: "50x6" %>
            </div>
            <div class="form-group">

                <%= f.label :その他メモ ,class:'form-control' %>
                <%= f.text_area :memo  ,size: "50x5" %>
            </div>
            <div class="form-group">
                <%= f.label :睡眠時間,class:'form-control' %>
                <%= f.number_field :sleep_n  %>
            </div>
            <div class="form-group">

                <%= f.label :日付 ,class:'form-control' %>
                <%= f.date_field :day,class:'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :公開しますか,class:'form-control' %>
                <%= f.select :private,[['非公開',0],['公開',1]], { include_blank: true, selected: 0 } %>
            </div>
            <%= f.submit "Post", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>
    