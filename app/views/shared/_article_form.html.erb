<div class="col-md-6 col-md-offset-3">
   <%= form_with model: @article do |f| %>
        <div class="field">
            <div class="form-group">
                <%= f.label :内容 ,class:'form-control' %>
                <%= f.text_area :content ,size: "50x10" %>
            </div>
            <div class="form-group">

                <%= f.label :その他メモ ,class:'form-control' %>
                <%= f.text_area :memo  ,size: "50x10" %>
            </div>
            <%= f.label :睡眠時間,class:'form-control' %>
            <%= f.number_field :sleep_n  %>
            <%= f.label :日付 ,class:'form-control' %>
            <%= f.date_field :day,class:'form-control' %>
            <%= f.submit "Post", class: "btn btn-primary" %>

        </div>
    <% end %>
</div>
    