<div class="col-md-6 col-md-offset-3">
   <%= form_with model: @article do |f| %>
        <div class="field">
            <%= react_component("Tagsearch") %>

            <div class="form-group">
                <%= f.label :場所タグ ,class:'form-control' %>
                <%= f.collection_select :place_tag_ids, tag, :id, :name, { include_blank: "" }, multiple: true, class: "form-control js-tag_place" %>

            </div>
            <div class="form-group">
            <%= f.label :人物タグ ,class:'form-control' %>
            <%= f.collection_select :person_tag_ids, tag, :id, :name, { include_blank: "" }, multiple: true, class: "form-control js-tag_person" %>

            </div>


            <div class="form-group">
                <%= f.label :内容 ,class:'form-control' %>
                <%= f.text_area :content ,size: "50x6" %>
            </div>
            <div class="form-group">

                <%= f.label :その他メモ ,class:'form-control' %>
                <%= f.text_area :memo  ,size: "50x5" %>
            </div>
            <div class="form-group">
                <%= f.label :睡眠時間,class:'form-control' %>
                <%= f.number_field :sleep_n,value:3  %>
            </div>
            <div class="form-group">

                <%= f.label :日付 ,class:'form-control' %>
                <%= f.date_field :day,class:'form-control' ,value:Time.now.strftime("%Y-%m-%d")%>
            </div>
            <div class="form-group">
                <%= f.label :公開しますか,class:'form-control' %>
                <%= f.select :private,[['非公開',1],['公開',0]], { include_blank: true, selected: 1 } %>
            </div>
            <%= f.submit "Post", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>
    